// This is test schema to be run on the nonprod cluster.
// It should use every type of action in the framework.

{
  "activityType": "impressions",
  "items": [
    {
      "source": ["special_offers_id"],
      "actions": [

        {
          "actionType":"custom-add-enriched-fields",
          "config": [
            { 
              "key": "EnrichedField1",
              "value": "1"
            },
            { 
              "key": "EnrichedField2",
              "value": "2"
            }
          ]
        },

        {
          "actionType":"simple-copy"
        },

        {
          "actionType":"replace-null-with-0"
        },

        {
          "actionType":"lookup",
          "config":{
            "lookupDB": "dw_dev",
            "lookupTable": "local_offer_group",
            "lookupField": "ods_local_offer_id",
            "fieldsToSelect": [
              "local_offer_group_id"
            ]
          }
        }
      ]
    }
  ]
}


